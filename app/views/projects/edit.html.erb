<h1 class="text-center">Edit Project</h1>
<br>
<div>
<%= form_for @project, remote: true do |f| %>
  <div class="col-md-6 col-md-offset-3">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control", :placeholder => "Enter the url" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control", :placeholder => "Enter the url", rows: "10" %>
    </div>
    <div class="form-group">
      <%= select_tag "project[category_id]", options_for_select(@categories.map {|category| [category.name, category.id]}, @project.category.id), { class: "form-control" } %>
    </div>
    <div class="col-md-4">
      <div class="form-actions">
        <%= f.submit "Update", class: "btn btn-primary col-md-12", id: "btn-update-submit" %>
      </div>
    </div> 
    <div class="col-md-3 col-md-offset-5">
      <div class="form-actions">
        <%= link_to "Delete", @project, class: "btn btn-danger col-md-12", method: :delete, data: { confirm: "Are you sure?"} %>
      </div>
    </div>
  </div>   
<% end %>
</div>
$("#project_url").val('');
$("#add-result").text('<%= @message %>');

<% if @message == "Successfully added" %>
    content_to_show = '<div class="col-md-6">' + '<%= image_tag "#{@project.cover}", class: "img-circle", width: "100%" %>' + '</div>'
                    + '<div class="col-md-6">' + '<h3 class="text-center"><strong><%= @project.title %></strong></h3><p><%= @project.description %></p>' + '</div>'
    $("#project-aftersave").append(content_to_show).hide().fadeIn(2000);
<% end %>
